.description .title{
  margin-top: 3%;
  padding-left: 5%;
  line-height: 40px;
  background: rgba(2, 3, 49, 0.671);
  color:white;
  font-size: 18px;
}
.description .content{
  display: flex;
  padding-bottom: 1%;
}
.description .description_L{
  padding: 3%;
  width:20%;
  text-align: center;
  background: rgb(190, 236, 234); 
  float: left;
}
.description .description_L image{
  width: 30px;
  height: 30px;
}
.description text{
  padding:  2% 3% 0 3%;
  color: #666;
  display: block;
}
.description .description_R{
  width:80%;
  background: #eee;
}
.description .description_R .summary{
  font-size: 15px;
  color: black;
}
