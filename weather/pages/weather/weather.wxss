.description .title{
  margin-top: 5px;
  padding-left: 5%;
  line-height: 40px;
  background: rgba(2, 3, 49, 0.671);
  color:white;
  font-size: 18px;
}
.description .content{
  display: flex;
  padding-bottom: 1px;
  font-size: 12px;
}
.description .description_L{
  flex: 1;
  padding: 5px;
  /* width:20%; */
  text-align: center;
  background: rgb(190, 236, 234); 
  float: left;
}
.description .description_L image{
  width: 30px;
  height: 30px;
  /* 图片和文字位置适应不同设备 */
  display: block;
  margin: 0 auto;
}
.description text{
  padding:  5px;
  color: #666;
  display: block;
}
.description .description_R{
  /* width:80%; */
  flex: 4;
  background: #eee;
}
.description .description_R .summary{
  padding: 10px 5px 0 5px;
  font-size: 15px;
  color: black;
}