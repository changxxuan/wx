.city{
  padding: 2% 5%;
  overflow: hidden;
  background: #ddd;
} 
.city .curcityname{
  margin-left: 5px ;
  margin-right: 10px;
  font-size: 15px;
  float: left;
}

.city .curcity{
  width: 20px;
  height: 20px;
  float: left;
}
.city .updatetime{
  margin-left: 5px;
  width:110px;
  float: right;
  font-size: 12px;
}
.city .update{
  width: 20px;
  height: 20px;
  float: right;
}
.weather{
  /* width: 100%;
  height: 200px; */
  padding: 1% 5%;
  overflow: hidden;
  background: rgb(190, 236, 234);
}
.weather .weathepng{
  /* padding: 10px; */
  display: block;
  float: left;
  width: 100px;
  height: 100px;
   /* background: green; */
}
.weather .weather_right{ 
  margin-top: 3%; 
  float: right;
  /* margin: 5%; */
  width: 40%;
  font-size: 12px;
  color:rgb(118, 118, 199);
  /* background: yellow; */
}
.weather .temperature{
  display:block;
  font-size: 36px;
  /* background: red; */
}
.weather .param {
  clear: both;
  padding-top: 3%;
  display: flex;
  font-size: 12px;
   /* background: pink; */
}
.weather .param view{
  flex: 1;
  text-align: center;
}
.weather .param .borderR{
  border-right: 1px solid #666;
}
.weather .param .title{
  font-weight: lighter;
  font-size: 12px;
  color: #666;
}
.weather .param .info{
  color:rgb(118, 118, 199);
  display: block;
}

.forecast{
  margin: 5px;
  border: 1px solid #eee;
  border-radius: 5px;
}
.hourlytitle{
  padding: 10px;
  font-size: 18px;
  color: white;
  background:  rgba(2, 3, 49, 0.116);
  border-radius: 5px 5px 0 0;
}
.hourlyforecast {
  display: flex;
  overflow: hidden;
  margin: 5px;
}
.hourlyforecast .hourlyitem{ 
  flex: 1;
  padding: 5px 3%;
  /* height: 70px; */
  text-align: center;
  overflow: hidden;
  display: inline-block;
  font-size: 12px;
}
.hourlyforecast .hourlypng{
  width: 30px;
  height: 30px;
  display: block;
}
.hourlyforecast .hourlytmp{
  display: block;
}

.dailyforcast {
  padding: 10px 0;
  margin: 0 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* text-align: center; */
  font-size: 12px;
  border-top: 1px solid #eee;
}
.dailyforcast .daily{
  flex: 1;
}
.dailyforcast .daily .datename{
  font-weight: bold;
}
.dailyforcast text{
  /* margin-left: 10px; */
  display: inline-block;
}

