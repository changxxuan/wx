.header{
  margin: 15rpx 80rpx;
  display: flex;
  justify-content: space-evenly;
}
.header view{
  display: flex;
  justify-content: center;
}
.header text{
  margin-left: 10rpx;
  font-size: 30rpx;
}
.img{
  margin-left: 10rpx;
  height: 40rpx;
  width: 40rpx;
}
.bound{ 
  width: 80rpx;
  text-align: center;
  background-color:rgba(0, 0, 255, 0.397);
  color: white;
}
.t{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tr{
  display: flex;
}
.tr .td{
  margin-bottom: 1px;
  margin-right: 1px;
  width: 50rpx;
  height:50rpx;
  position: relative;
  line-height: 50rpx;
  text-align: center;
  background:lightblue;
}
.tr .td .flag{
  position: relative;
  width: 40rpx;
  height:40rpx;
  z-index: 99;
}
/* .tr .td .wrongflag{
  position: relative;
