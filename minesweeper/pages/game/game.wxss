.game{
  width: 50rpx;
  height:50rpx;
  position: relative;
  background: yellow;
  border: solid 1px #ddd;
  line-height: 50rpx;
  text-align: center;
}
.mask{position: absolute; top:0; left: 0;  width: 40rpx; height:40rpx; line-height: 40rpx; background: #bbb; border-width: 5rpx; border-style: solid; border-color: #ddd #999 #999 #ddd; }
.show{
}
.hide{
  display: none;
}
.success{
  width: 1px;
  height: 1px;
  position: absolute;
  top:0;
}
.foot{
  margin: 3%;
  display: flex;
  justify-content: space-evenly;
}
.tips {
  margin-left: 40rpx;
  font-size: 30rpx;
  color: gray;
}